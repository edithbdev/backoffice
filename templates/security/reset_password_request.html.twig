{% extends 'base.html.twig' %}

{% block title %}
	Changer de mot de passe
{% endblock %}

{% block body %}

	<div id="layoutAuthentication">
		<div id="layoutAuthentication_content">
			<main>
				<div class="container">
					<div class="row justify-content-center">
						<div class="col-lg-5">
							<div class="card shadow-lg border-0 rounded-lg mt-5">
								<div class="card-header">
									<h3 class="text-center font-weight-light my-4">Mot de passe oublié</h3>
									{% include '_partials/_flash_messages.html.twig' %}
								</div>
								<div class="card-body">
									<div class="small mb-3 text-muted">Entrer votre adresse email et nous vous enverrons un lien pour réinitialiser votre mot de passe.</div>
									{{ form_start(form) }}
									<div class="form-floating mb-3">
										{{ form_row(form.email) }}
									</div>
									<div class="d-flex align-items-center justify-content-between mt-4 mb-0">
										<a class="small" href="{{ path('app_login') }}">Retour à la connexion</a>
										<button type="submit" class="btn btn-primary btn-sm">Changer de mot de passe</button>
									</div>
									{{ form_end(form) }}
								</div>
								{# <div class="card-footer text-center py-3 mt-2">
									<div class="small">
										<a href="{{ path('app_register') }}">Need an account? Sign up!</a>
									</div>
								</div> #}
							</div>
						</div>
					</div>
				</div>
			</main>
		</div>
	{% endblock %}
