{% extends 'base.html.twig' %}
{% block title %}Sign up
{% endblock %}
{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
	<div id="layoutAuthentication">
		<div id="layoutAuthentication_content">
			<main>
				<div class="container">
					<div class="row justify-content-center">
						{# {% for message in app.flashes('success') %}
							<div class="alert alert-success">
								{{ message }}
							</div>
						{% endfor %}
						{% for message in app.flashes('danger') %}
							<div class="alert alert-danger">
								{{ message }}
							</div>
						{% endfor %} #}
						<div class="col-lg-7">
							<div class="card shadow-lg border-0 rounded-lg mt-5">
								<div class="card-header">
									<h3 class="text-center font-weight-light my-4">Create Account</h3>
								</div>
								<div class="card-body">

									{{ form_start(registrationForm, {'attr': {'id':'new_user'}}) }}

									<div class="row mb-3">
										<div class="col-md-6">
											<div class="form-floating mb-3 mb-md-0">
												{{ form_widget(registrationForm.name) }}
												{{ form_errors(registrationForm.name)}}
												{{ form_help(registrationForm.name) }}
												{{ form_label(registrationForm.name) }}

											</div>
										</div>
										<div class="col-md-6">
											<div class="form-floating mb-3 mb-md-0">
												{{ form_widget(registrationForm.phone) }}
												{{ form_errors(registrationForm.phone)}}
												{{ form_help(registrationForm.phone) }}
												{{ form_label(registrationForm.phone) }}

											</div>
										</div>
									</div>
									<div class="col-md-12">
										<div class="form-floating mb-3 mb-md-0">
											{{ form_widget(registrationForm.email) }}
											{{ form_errors(registrationForm.email)}}
											{{ form_help(registrationForm.email) }}
											{{ form_label(registrationForm.email) }}
										</div>
									</div>
									<div class="row mt-3">
										<div class="col-md-6">
											<div class="form-floating mb-3 mb-md-0">
												{{ form_widget(registrationForm.plainPassword.first) }}
												{{ form_errors(registrationForm.plainPassword.first) }}
												{{ form_help(registrationForm.plainPassword.first) }}
												{{ form_label(registrationForm.plainPassword.first) }}
											</div>
										</div>
											<div class="col-md-6">
												<div class="form-floating mb-3 mb-md-0">
													{{ form_widget(registrationForm.plainPassword.second) }}
													{{ form_errors(registrationForm.plainPassword.second) }}
													{{ form_help(registrationForm.plainPassword.second) }}
													{{ form_label(registrationForm.plainPassword.second) }}
												</div>
											</div>
										</div>

										<div class="row mb-3 mt-3">
											<div class="col-12 mt-4">
												<div class="custom-control custom-checkbox">
													{{form_widget(registrationForm.captcha)}}
													{{form_errors(registrationForm.captcha)}}
													{{form_help(registrationForm.captcha)}}
													{{form_label(registrationForm.captcha)}}
												</div>
											</div>
									</div>
									<div class="row">
										{# <div class="col-md-6">
											<div class="form-group">
												<div class="custom-control custom-checkbox">
													{{form_widget(registrationForm.agreeTerms)}}
													{{form_errors(registrationForm.agreeTerms)}}
													{{form_help(registrationForm.agreeTerms)}}
													{{form_label(registrationForm.agreeTerms)}}
												</div>
											</div>
										</div> #}
										<div class="mt-4 mb-3 d-flex justify-content-center">
											<button class="btn btn-lg btn-primary btn-block" type="submit">Create Account</button>
											{{ form_end(registrationForm) }}
										</div>
								</div>
								<div class="card-footer text-center py-3">
									<div class="small">
										<a href="{{ path('app_login') }}">Have an account? Go to login</a>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</main>
		</div>
	{% endblock %}

