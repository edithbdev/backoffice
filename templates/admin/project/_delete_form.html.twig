<button onclick="document.getElementById('confirm-delete').style.display='block'"> <i class="fa fa-trash" aria-hidden="true"></i></button>

<div id="confirm-delete" class="modal">
  <span onclick="document.getElementById('confirm-delete').style.display='none'" class="close" title="Close Modal">Ã—</span>
  <form method="post" class="modal-content" action="{{ path('admin_project_delete', {'id': project.id}) }}">
  <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ project.id) }}">
    <div class="container">
      <h1>Supprimer un projet</h1>
      <p>Voulez-vous vraiment supprimer le projet <strong>{{ project.name }}</strong> ?</p>

      <div class="clearfix">
        <button type="button" onclick="document.getElementById('confirm-delete').style.display='none'" class="cancelbtn">Cancel</button>
      <button type="submit" onclick="document.getElementById('confirm-delete').style.display='none'" class="deletebtn">Delete</button>
      </div>
    </div>
  </form>
</div>
