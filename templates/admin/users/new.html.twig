{% extends 'base.html.twig' %}

{% block title %}Ajouter un utilisateur
{% endblock %}

{% block body %}
	<div id="layoutSidenav">
		<div id="layoutSidenav_content">
			<main>
				<div class="container-fluid px-4">
					<h1 class="mt-4">Add user</h1>
					<ol class="breadcrumb mb-4">
						<li class="breadcrumb-item">
							<a href="{{ path('homepage') }}">Accueil</a>
						</li>
						<li class="breadcrumb-item active">
							<a href="{{ path('admin_users_index') }}">Liste des utilisateurs</a>
						</li>
						<li class="breadcrumb-item active">Ajouter un utilisateur
						</li>
					</ol>
					<div class="row">
						<div class="col-lg-12">
							<div class="card mb-4">
								<div class="card-header">
									<i class="fas fa-table mr-1" aria-hidden="true"></i>
									Ajouter un utilisateur
								</div>
								{{ form_start(form, {'attr': {'novalidate':'novalidate'}}) }}
								<div class="card-body">
									<div class="form-group">
										{{ form_label(form.firstname) }}
										{{ form_widget(form.firstname) }}
										{% if form_errors(form.firstname) %}
											<div class="text-danger">
												{{ form_errors(form.firstname) }}
											</div>
										{% endif %}
									</div>
									<div class="form-group">
										{{ form_label(form.lastname) }}
										{{ form_widget(form.lastname) }}
										{% if form_errors(form.lastname) %}
											<div class="text-danger">
												{{ form_errors(form.lastname) }}
											</div>
										{% endif %}
									</div>
									<div class="form-group">
										{{ form_label(form.slug) }}
										{{ form_widget(form.slug) }}
										{% if form_errors(form.slug) %}
											<div class="text-danger">
												{{ form_errors(form.slug) }}
											</div>
										{% endif %}
									</div>
									<div class="form-group mb-4">
										{{ form_label(form.email) }}
										{{ form_widget(form.email) }}
										{% if form_errors(form.email) %}
											<div class="text-danger">
												{{ form_errors(form.email) }}
											</div>
										{% endif %}
									</div>
									<div class="form-group mb-4">
										{{ form_row(form.password.first) }}
										{{ form_row(form.password.second) }}
									</div>
									<div class="form-group">
										<div>
											{{ form_row(form.roles) }}
										</div>
									</div>
									<div class="form-group">
										{{ form_label(form.isVerified) }}
										{{ form_widget(form.isVerified) }}
										<div class="form-error">
											{{ form_errors(form.isVerified) }}
										</div>
									</div>

									<button class="btn btn-primary mt-4 mb-5">{{ button_label|default('Ajouter') }}</button>
									<button class="btn redirect mt-4 mb-5">
										<a href="{{ path('admin_users_index') }}">Retour</a>
									</button>
									{{ form_end(form) }}
								</div>
							</div>
						</div>
					</div>
				</div>
			</main>
		{% endblock %}
