{% extends 'base.html.twig' %}


{% block title %}Ajouter un outil
{% endblock %}

{% block body %}
	<div id="layoutSidenav">
		<div id="layoutSidenav_content">
			<main>
				<div class="container-fluid px-4">
					<h1 class="mt-4">Ajouter un outil</h1>
					<ol class="breadcrumb mb-4">
						<li class="breadcrumb-item">
							<a href="{{ path('homepage') }}">Accueil</a>
						</li>
						<li class="breadcrumb-item active">
							<a href="{{ path('admin_tools_index') }}">Liste des outils</a>
						</li>
						<li class="breadcrumb-item active">
							Ajouter un outil
						</li>
					</ol>

					<div class="row">
						<div class="col-lg-12">
							<div class="card mb-4">
								<div class="card-header">
									<i class="fas fa-table mr-1" aria-hidden="true"></i>
									Nouveau outil
								</div>
								{{ form_start(form, {'attr': {'novalidate':'novalidate'}}) }}

								<div class="card-body">
									<div class="form-group">
										{{ form_label(form.name) }}
										{{ form_widget(form.name) }}
										{% if form_errors(form.name) %}
											<div class="text-danger">
												{{ form_errors(form.name) }}
											</div>
										{% endif %}
									</div>

									<div class="form-group">
										{{ form_label(form.description) }}
										{{ form_widget(form.description) }}
										{% if form_errors(form.description) %}
											<div class="text-danger">
												{{ form_errors(form.description) }}
											</div>
										{% endif %}
									</div>

									<div class="d-flex flex-column" style="width: 100%; background-color: #f8f9fc; padding: 1rem; border-radius: 10px; margin-top: 2rem;">
										{{ form_row(form.projects) }}
									</div>
									<div>
										{{ form_widget(form.slug, { 'attr': {'class': 'd-none'} }) }}
									</div>
									<button class="btn btn-primary mt-4 mb-5" type="submit">{{ button_label|default('Ajouter') }}</button>
									<button class="btn redirect mt-4 mb-5">
										<a href="{{ path('admin_tools_index') }}">Retour</a>
									</button>
									{{ form_end(form) }}
								</div>
							</div>
						</div>
					</div>
				</div>
			</main>
		{% endblock %}
