{% extends 'base.html.twig' %}
{% block title %}Contact
{% endblock %}
{% block body %}
<div id="layoutAuthentication">
	<div id="layoutSidenav_content">
		<main>
			<div class="container-fluid px-4">
				<div class="row justify-content-center">
					<div class="col-lg-7">
						<div class="card shadow-lg border-0 rounded-lg mt-5">
							<div class="card-header">
								<h3 class="text-center font-weight-light my-4">Contact</h3>
							</div>
							{% for message in app.flashes('error') %}
						<div class="alert alert-danger">
							{{ message }}
						</div>
					{% endfor %}
							<div class="card-body">
								<div class="small mb-3 text-muted">A question, a suggestion ? Please contact me by filling the form below.</div>
								{{ form_start(form) }}
								{{ form_errors(form) }}

								<div class="form-floating mb-3">
									{{ form_row(form.email, { 'attr': {'class': 'form-control'} }) }}
									{# {{ form_widget(form.email, { 'attr': {'class': 'form-control'} }) }} #}
								</div>
								<div class="form-floating mb-3">
									{{ form_row(form.name, { 'attr': {'class': 'form-control'} }) }}
									{# {{ form_widget(form.name, { 'attr': {'class': 'form-control'} }) }} #}
								</div>
								<div class="form-group mb-3">
									{{ form_row(form.message, { 'attr': {'class': 'form-control'} }) }}
									{# {{ form_widget(form.message, { 'attr': {'class': 'form-control'} }) }} #}
								</div>
								<div class="row mb-3 mt-3">
										<div class="col-12 mt-4">
											<div class="custom-control custom-checkbox">
											{# <div class="g-recaptcha" data-sitekey="{{env("GOOGLE_RECAPTCHA_SITE_KEY") }}"> #}
											{{ form_row(form.recaptcha, { 'attr': {'class': 'form-control'} }) }}
											{# </div> #}
											{# </div> #}

											</div>
										</div>
								</div>
								<div class="row">
								<div class="mt-4 mb-3 d-flex justify-content-center">
											<button class="btn btn-lg btn-primary btn-block" type="submit">Send Message</button>
											{{ form_end(form) }}
								</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</main>
	</div>
</div>

		{% endblock %}
