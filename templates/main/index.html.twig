								<div class="card-body d-flex justify-content-between align-items-center">
									<a href="{{ path('admin_tools_create') }}" class="btn btn-sm btn-success">
										<i class="fas fa-plus" aria-hidden="true"></i>
										Nouveau
									</a>
									<a href="{{ path('admin_tools_index') }}" class="btn btn-sm text-white">
										<i class="fas fa-angle-right" aria-hidden="true"></i>
										Voir la liste
									</a>
								</div>
							</div>
						</div>
					</div>
				</div>
			</main>
		{% endblock %}
