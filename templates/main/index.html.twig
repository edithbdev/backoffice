{% extends 'base.html.twig' %}

{% block title %}Accueil
{% endblock %}

{% block body %}
	<div id="layoutSidenav">
		<div id="layoutSidenav_content">
			<main class="mb-5">
				<div class="container-fluid px-4">
					{% for message in app.flashes('success') %}
						<div class="alert alert-success mt-4">
							{{ message }}
						</div>
					{% endfor %}
					{% if is_granted('IS_AUTHENTICATED_FULLY') %}
						<h1 class="mt-4">Bienvenue
							{{ app.user.firstname }}
							{{ app.user.lastname }}
							!
						</h1>
					{% endif %}

					<ol class="breadcrumb mb-4">
						<li class="breadcrumb-item active">Accueil</li>
					</ol>
					<div class="row">
						<div class="col-xl-3 col-md-4">
							<div class="card bg-primary text-white mb-4">
								<h1 class="card-header fs-6">Projets</h1>
								<div class="card-body d-flex justify-content-between align-items-center">
									<a href="{{ path('admin_projects_create') }}" class="btn btn-sm btn-success">
										<i class="fas fa-plus" aria-hidden="true"></i>
										Nouveau
									</a>
									<a href="{{ path('admin_projects_index') }}" class="btn btn-sm text-white">
										<i class="fas fa-angle-right" aria-hidden="true"></i>
										Voir la liste
									</a>
								</div>
							</div>
						</div>
						<div class="col-xl-3 col-md-4">
							<div class="card bg-danger text-white mb-4">
								<h1 class="card-header fs-6">Projets archiv√©s</h1>
								<div class="card-body d-flex justify-content-between align-items-center">
									<a href="{{ path('admin_projects_archived') }}" class="btn btn-sm text-white">
										<i class="fas fa-angle-right" aria-hidden="true"></i>
										Voir la liste
									</a>
								</div>
							</div>
						</div>
						<div class="col-xl-3 col-md-4">
							<div class="card bg-dark text-white mb-4">
								<h1 class="card-header fs-6">Utilisateurs</h1>
								<div class="card-body d-flex justify-content-between align-items-center">
									<a href="{{ path('admin_users_create') }}" class="btn btn-sm btn-success">
										<i class="fas fa-plus" aria-hidden="true"></i>
										Nouveau
									</a>
									<a href="{{ path('admin_users_index') }}" class="btn btn-sm text-white">
										<i class="fas fa-angle-right" aria-hidden="true"></i>
										Voir la liste
									</a>
								</div>
							</div>
						</div>
						<div class="col-xl-3 col-md-4">
							<div class="card bg-dark text-white mb-4">
								<h1 class="card-header fs-6">Messages
									<span class="badge bg-primary text-white ms-1 rounded-pill">
										{{ countUnreadMessages() }}
										non lus
									</span>
								</h1>
								<div class="card-body d-flex justify-content-between align-items-center">
									<a href="{{ path('admin_messages_index') }}" class="btn btn-sm text-white">
										<i class="fas fa-angle-right" aria-hidden="true"></i>
										Voir la liste
									</a>
								</div>
							</div>
						</div>
						<hr/>
						<div class="col-xl-3 col-md-4">
							<div class="card bg-secondary text-white mb-4">
